@page "/bikes"
<h3>Bikes</h3>

<button @onclick="AddBike">Show Bikes</button>

<ol>
    @for (int i = 0; i < bikesList.Count(); i++)
    {
        if (i == numbersToShow)
        {
          break;  
        }
        <li>@bikesList[i].FullModelName</li>
    }
</ol>

<input type="number" @onchange="@(e => limitList(e.Value.ToString()))" min="0" max="@bikesList.Count()" value="5">

@code {
    private List<NewBike> bikesList = new();
    private int numbersToShow = 5;

    private void AddBike(){

        NewBike[]  bikes = {
            new NewBike{
                FullModelName = "Kawasaki Ninja H2"
            },
            new NewBike{
                FullModelName = "Yamaha YZF R1M"
            },
            new NewBike{
                FullModelName = "Suzuki Hayabusa gen3"
            },
            new NewBike{
                FullModelName = "Kawasaki Ninja ZX10R"
            },
            new NewBike{
                FullModelName = "Kawasaki Z1000"
            }
        };

        bikesList.AddRange(bikes);

    }
    private void limitList(string num){
        numbersToShow = int.Parse(num);
    }
}
